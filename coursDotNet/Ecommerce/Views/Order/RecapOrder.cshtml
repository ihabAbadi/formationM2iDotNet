@model Cart
<div class="container">
    @if (Model == null || Model.Products.Count == 0)
    {
        <div class="row">
            <div class="col alert alert-info">
                Votre panier est vide
            </div>
        </div>
    }
    else
    {
        @foreach (ProductCart p in Model.Products)
        {
            <div class="row">
                <div class="col-3">
                    <img src="@p.Product.Images[0].Url" />
                </div>
                <div class="col-4">
                    @p.Product.Title
                </div>
                <div class="col-1">
                    @p.Product.Price €
                </div>
                <div class="col-1">
                    @p.Qty
                </div>
                <div class="col-1">
                    @(p.Product.Price * p.Qty) €
                </div>
                <div class="col-2">
                    <a class="btn btn-danger" asp-controller="Cart" asp-action="DeleteProductFromCart" asp-route-id="@p.Product.Id">Supprimer</a>
                </div>
            </div>
        }
        <div class="row">
            <div class="col-3 offset-9">
                Total : @Model.Total €
            </div>
        </div>
        <div class="row">
            <div class="col-3 offset-9">
                <a class="btn btn-success" asp-action="ConfirmOrder" asp-controller="Order">Payer</a>
            </div>
        </div>
    }
</div>