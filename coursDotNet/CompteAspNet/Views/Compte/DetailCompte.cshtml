@model Compte
<div class="container">
    @if (Model == null)
    {
        <div class="row">
            <div class="alert alert-danger col">
                Aucun compte avec ce numéro
            </div>
        </div>
    }
    else
    {
        <div class="row m-1">
            <h1 class="col">@Model.Client.Nom @Model.Client.Prenom @Model.Client.Telephone</h1>
        </div>
        <div class="row m-1">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Numero</th>
                        <th scope="col">Montant</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Operation o in Model.Operations)
                    {
                        <tr>
                            <th scope="row">@o.Id</th>
                            <td>@o.Montant</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="row m-1">
            <div class="col-3 offset-9 h4">
                Solde : @Model.Solde
            </div>
        </div>
        <div class="row m-1">
            <div class="col">
                <a class="form-control btn btn-danger" asp-controller="Compte" asp-action="FormOperation" asp-route-numero="@Model.Numero" asp-route-type="retrait">Retrait</a>
            </div>
            <div class="col">
                <a class="form-control btn btn-success" asp-controller="Compte" asp-action="FormOperation" asp-route-numero="@Model.Numero" asp-route-type="depot">Depôt</a>
            </div>
        </div>
    }
</div>